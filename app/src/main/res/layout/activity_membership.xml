<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    tools:context=".ui.activities.MembershipActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/layoutPro"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow"
                        android:layout_margin="20dp"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/crown"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/crown"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/ivBack"
                        />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="QUICKIE PRO"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_below="@id/crown"
                        />

                    <TextView
                        android:id="@+id/tvPlan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get membership for 3 months at"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_below="@id/tvTitle"
                        />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â‚¹99 only"
                        android:textColor="@color/stars"
                        android:layout_marginTop="10dp"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_below="@id/tvPlan"
                        />

                    <TextView
                        android:id="@+id/tvMovingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offer valid for a limited time..."
                        android:textColor="@color/invalid"
                        android:textSize="16sp"
                        android:layout_below="@id/tvAmount"
                        android:layout_marginTop="30dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutPro"
                    android:background="@drawable/benefit_bg"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/layout1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/star"
                            android:layout_margin="20dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PRO BENEFITS"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.5"
                            />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/star"
                            android:layout_margin="20dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_below="@id/layout2"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/delivery_bike"
                            />

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="Free delivery on all orders"
                            android:textColor="@color/white"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_below="@id/layout3"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/vip_card"
                            />

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="Up to 30% extra off"
                            android:textColor="@color/white"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout5"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_below="@id/layout4"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/gift"
                            />

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="Free goodies on specific occasions"
                            android:textColor="@color/white"

                            />

                    </LinearLayout>

                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutPro"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cornerRadius="30dp"
                    android:textColor="@color/black"
                    android:text="Buy pro membership"
                    android:backgroundTint="@color/stars"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>



    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>